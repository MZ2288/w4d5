<form action="<%= action %>" method="post">
  <%= auth_token %>
  <label for="user_username">Username</label>
  <input type="text"
         name="user[username]"
         value="<%= user.username unless user.nil? %>"
         id="user_username">
  <br><br>
  <label for="user_password">Password</label>
  <input type="password"
         name="user[password]"
         id="user_password">
  <br><br>
  <input type="submit" value="submit">
</form>
